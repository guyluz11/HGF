<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/userImageImageView_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/userRoleTextView_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/userNameTextView_item"
        app:srcCompat="@drawable/deafult_profile_pictire" />

    <TextView
        android:id="@+id/userNameTextView_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="EUROHACK: The Eurovision Hackathon"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userRoleTextView_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FrenziQ"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/userNameTextView_item"
        app:layout_constraintTop_toBottomOf="@+id/userNameTextView_item" />

</androidx.constraintlayout.widget.ConstraintLayout>